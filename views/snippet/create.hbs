<h2>
  <span class="fas fa-plus-square"></span> Create snippet
</h2>

<form method="post" action="/snippets/create">
  <div class="form-group">
    <label for="title">Title:</label>    
    <input type="text" id="title" class="form-control" name="title" placeholder="Title of snippet" required="required" autofocus="autofocus" />    
  </div>  
  <div class="form-group">
    <label for="content">Code:</label>
    <textarea class="form-control" id="content" name="content" rows="15" placeholder="Enter your code here" required="required"></textarea>
  </div>  
  <div class="form-group">    
    <label><input type="checkbox" class="checkbox" checked="checked" name="private" />&nbsp;&nbsp;Make private</label>
  </div>  
  <button type="submit" class="btn btn-lg btn-primary">Create</button>  
  <button type="reset" class="btn btn-lg btn-secondary">Clear</button>
</form>

